<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:id="@+id/friendlist"
	android:background="@drawable/frienditemselect" >
	
			<com.hello008.util.RoundAngelImageView 
			    android:id="@+id/faceimg"
			    android:layout_width="47dip"
			    android:layout_height="47dip"
			    android:layout_marginTop="6dip"
			    android:layout_marginBottom="6dip"
			    android:layout_marginRight="6dip"
			    android:layout_marginLeft="8dip"
			    android:scaleType="centerCrop"
			    android:focusable="false"
			    android:contentDescription="@string/faceDescription"/>
			
		    <TextView android:id="@+id/uname"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:typeface="normal"
		        android:textSize="15sp"
		        android:textColor="#555566"
		        android:textStyle="bold"
		        android:layout_margin="5dip"/>
		    
		     <TextView android:id="@+id/uphone"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:visibility="gone"/>
</LinearLayout>
